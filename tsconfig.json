{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["jest", "node"]
  },
  "include": ["scripts/**/*", "src/**/*", "__tests__/**/*", "test/**/*", "playwright/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "artifacts", "playwright-report"]
}

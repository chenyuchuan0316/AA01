{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["node"]
  },
  "include": [
    "__tests__/**/*",
    "playwright/**/*",
    "scripts/**/*",
    "src/**/*",
    "test/**/*",
    "gas-deploy.mjs",
    "get-refresh-token.mjs",
    "playwright.config.mjs"
  ],
  "exclude": ["node_modules", "dist", "coverage", "artifacts", "playwright-report"]
}

{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["__tests__/**/*", "test/**/*", "playwright/**/*", "src/utils/**/*"],
  "exclude": ["node_modules", "dist"]
}
